# KE Analyzer Environment Configuration
# Copy this file to .env and update the values

# ============================================
# FastAPI Settings
# ============================================
DEBUG=false
HOST=0.0.0.0
PORT=8000

# ============================================
# Jira Configuration
# ============================================
# Your Jira instance URL (e.g., https://yourcompany.atlassian.net)
JIRA_URL=https://your-jira.atlassian.net

# Your Jira email/username
JIRA_USERNAME=your-email@example.com

# Jira API Token (create at https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-api-token

# Jira project key to monitor (optional)
JIRA_PROJECT_KEY=

# Webhook secret for verification (optional but recommended)
JIRA_WEBHOOK_SECRET=your-webhook-secret

# ============================================
# Qwen-Max AI Configuration (Alibaba Cloud DashScope)
# ============================================
# Get your API key from https://dashscope.aliyun.com/
QWEN_API_KEY=your-dashscope-api-key

# API endpoint (default should work)
QWEN_API_URL=https://dashscope.aliyuncs.com/api/v1/services/aigc/text-generation/generation

# Model to use
QWEN_MODEL=qwen-max

# Generation parameters
QWEN_MAX_TOKENS=4096
QWEN_TEMPERATURE=0.3

# ============================================
# Memory MCP Configuration (Optional)
# ============================================
# Memory MCP service URL
MEMORY_MCP_URL=http://localhost:8080

# Memory MCP API key
MEMORY_MCP_API_KEY=your-mcp-api-key

# Enable Memory MCP integration
ENABLE_MEMORY_MCP=true

# ============================================
# Tool Gateway Configuration
# ============================================
# Path to crash utility (leave empty to use system default)
CRASH_COMMAND=crash

# Path to gdb
GDB_COMMAND=gdb

# Path to addr2line
ADDR2LINE_COMMAND=addr2line

# ============================================
# Storage Settings
# ============================================
# Temporary directory for downloads and processing
TEMP_DIR=/tmp/ke-analyzer

# Maximum attachment size in bytes (500MB default)
MAX_ATTACHMENT_SIZE=524288000

# ============================================
# Kernel Source Settings (Optional)
# ============================================
# Path to kernel source code for source-level analysis
KERNEL_SOURCE_PATH=/path/to/kernel/sources

# Path to kernel symbols (vmlinux files)
KERNEL_SYMBOL_PATH=/path/to/kernel/symbols

# ============================================
# Analysis Settings
# ============================================
# Maximum analysis time in seconds
MAX_ANALYSIS_TIME=600

# Enable kernel source RAG for better analysis
ENABLE_KERNEL_RAG=true
